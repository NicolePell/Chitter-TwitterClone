<header>
	<h1>Chitter</h1>

	<section class="welcome">
		<% if current_user %>
		<span class="user_welcome">	Welcome, <%= current_user.user_name %>
		</span>
	</section>			
				
		<form class="sign_out" method="post" action="/sessions">
					<input type="hidden" name="_method" value="delete">
					<input type="submit" value="Sign out">
		</form>

		<% else %>
			<a href="/users/new" id="sign_up" class="button">Sign up</a>
			<a href="/sessions/new" id="sign_in" class="button">Sign in</a>
		<% end %>

	
</header>