<header id="logo">Chitter

	<div id="users_posts">
		<% if current_user %>
		<span id="user_welcome">	Welcome, <%= current_user.user_name %>
		</span>			
				
		<form id='sign_out' method="post" action="/sessions">
					<input type="hidden" name="_method" value="delete">
					<input type="submit" value="Sign out">
	</form>
	<% else %>
		<a href="/users/new" id="sign_up" class="button">Sign up</a>
		<a href="/sessions/new" id="sign_in" class="button">Sign in</a>
	<% end %>

	</div>
</header>